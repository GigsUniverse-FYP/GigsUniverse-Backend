# ==============================
# Backend Environment Variables
# ==============================

# Frontend / Engine URLs
FRONTEND_URL=https://gigsuniverse.studio
ENGINE_URL=https://engine.gigsuniverse.studio

# PostgreSQL
POSTGRES_URL=jdbc:postgresql://localhost:5432/gigsuniverse
POSTGRES_USER=postgres
POSTGRES_PASSWORD=root

# MongoDB
MONGO_URI=mongodb://localhost:27017/gigsuniverse

# JPA
JPA_HIBERNATE_DDL=update
JPA_SHOW_SQL=true

# SMTP (Email)
SMTP_HOST=smtp.zoho.com
SMTP_PORT=587
SMTP_USER=your_email@gigsuniverse.studio
SMTP_PASS=your_password

# JWT
JWT_SECRET=change_me
JWT_EXPIRATION=86400000

# Google OAuth2
GOOGLE_FREELANCER_CLIENT_ID=
